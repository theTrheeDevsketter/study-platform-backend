

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userName          String   @unique
  avatar_url        String?
  role              String  
}

model Posti{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  tags        String[]
  author      String
  isPosted    Boolean
  avatarImg   String
  date        String
  likes       Int
}

model Tags{
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
}


