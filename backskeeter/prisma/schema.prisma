

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  githubId          String   @unique
  userName          String   @unique
  profileUrl        String?
  avatar_url        String?
  blog              String?
  location          String?
  twitter_username  String?
  public_repos      String?
  public_gist       String?
  strikes           String?
  isBanned          DateTime     
  isDeleted         DateTime
  
}

model Posti{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  tags        String[]
  author      String
  isPosted    Boolean
}

model Tags{
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
}


